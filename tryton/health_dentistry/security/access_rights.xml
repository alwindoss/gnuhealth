<?xml version="1.0" encoding="utf-8"?>
<tryton>
    <data>

        <record model="res.user" id="user_demo_dentist">
            <field name="name">Health Dentist</field>
            <field name="login">demo_dentist</field>
            <field name="password">gnusolidario</field>
        </record>

